# Database Configuration
# ⚡ Performance: Connection pooling parameters
# connection_limit: Max number of connections in pool (default: num_cpus * 2 + 1)
# pool_timeout: Seconds to wait for available connection (default: 10)
# Example with pooling: postgresql://user:password@localhost:5432/db?connection_limit=10&pool_timeout=20
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/rukny_io?schema=public&connection_limit=10&pool_timeout=20&connect_timeout=10"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRATION="7d"

# Google OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3001/auth/google/callback"

# Redis Configuration
# ⚡ Performance: Redis connection settings
REDIS_HOST="localhost"
REDIS_PORT=6379
# Use full Redis URL for better control (includes DB selection)
# REDIS_URL="redis://localhost:6379/0"

# Application Configuration
PORT=3001
NODE_ENV="development"

# Frontend URL (CORS)
FRONTEND_URL="http://localhost:3000"

# Optional: Stripe (for future use)
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Optional: AWS S3 (for file uploads)
# AWS S3 configuration (for S3 banner uploads)
# Store credentials in your deployment secrets — DO NOT COMMIT REAL KEYS
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
# S3 bucket name where banners will be stored
S3_BUCKET=""
AWS_REGION="us-east-1"
# Limits (defaults) - for banners
S3_UPLOAD_MAX_MB=5
S3_UPLOAD_MAX_FILES=3
# Product images configuration
S3_PRODUCT_IMAGE_MAX_SIZE=5242880  # 5MB in bytes
S3_PRODUCT_IMAGE_MAX_COUNT=5
# ========== Telegram Bot Configuration ==========
TELEGRAM_BOT_TOKEN="your-telegram-bot-token-from-botfather"
TELEGRAM_BOT_NAME="RuknyBot"
TELEGRAM_WEBHOOK_URL="https://your-domain.com/api/telegram/webhook"
TELEGRAM_ENABLED=true